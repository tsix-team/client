<!-- Page body -->
<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-12">
                <form class="card" method="post" action="">
                    <div class="card-body">
                        <h3 class="card-title">Edit subcate</h3>
                        <div class="row row-cards mt-3">
                            <div class="row">
                                <div class="mb-3 col-6">
                                    <label class="form-label">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-abc"
                                            width="24" height="24" viewBox="0 0 24 24" stroke-width="2"
                                            stroke="currentColor" fill="none" stroke-linecap="round"
                                            stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M3 16v-6a2 2 0 1 1 4 0v6"></path>
                                            <path d="M3 13h4"></path>
                                            <path d="M10 8v6a2 2 0 1 0 4 0v-1a2 2 0 1 0 -4 0v1"></path>
                                            <path d="M20.732 12a2 2 0 0 0 -3.732 1v1a2 2 0 0 0 3.726 1.01">
                                            </path>
                                        </svg> Tên
                                    </label>
                                    <input type="text" class="form-control" name="name_subcate" value="{{data.name_subcate}}"
                                        placeholder="name" required>
                                </div>
                                <div class="mb-3 col-6">
                                    <label class="form-label">
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                            class="icon icon-tabler icon-tabler-category-2" width="24" height="24"
                                            viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                            stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <path d="M14 4h6v6h-6z"></path>
                                            <path d="M4 14h6v6h-6z"></path>
                                            <path d="M17 17m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path>
                                            <path d="M7 7m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path>
                                        </svg> Danh mục
                                    </label>
                                    <select class="form-select" name="id_cate" id="id_cate">
                                        {{#each dataCates}}
                                        <option value={{this.id_cate}}>{{this.name_cate}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    const id = {{ data.id_cate }}; // Replace with the desired 'id' value
    console.log('id cate:', id)
    const select = document.querySelector('#id_cate');
    const options = select.querySelectorAll('#id_cate option');

    options.forEach(option => {
        if (parseInt(option.value) === id) {
            option.setAttribute('selected', 'selected');
        } else {
            option.removeAttribute('selected');
        }
    });
</script>