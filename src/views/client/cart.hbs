                </div>
                {{else}}
                <div class="cart-submit">
                    <a href="{{ROOT_URL}}/checkout"><button class="btn btn_buyNow">Vui lòng đăng nhập để đặt
                            hàng</button></a>
                </div>
                {{/if}}

            </div>
